---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404">
	<div class="h-screen flex justify-center items-center bg-gray-100">
		<div class="max-w-md mx-auto text-center">
			<h1 class="text-9xl font-bold text-gray-600">404</h1>
			<h2 class="text-3xl font-bold text-gray-600 mb-4">Page Not Found</h2>
			<p class="text-lg text-gray-600 mb-6">The page you're looking for doesn't exist.</p>
			<a href="/" class="bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded">Back to Home</a
			>
		</div>
	</div>
</Layout>
