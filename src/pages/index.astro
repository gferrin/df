---
import Layout from '../layouts/Layout.astro';
import Item from '../components/Item.astro';
import { getCollection } from 'astro:content';

// Fetch all data from the collection
const allData = await getCollection('data');

// Filter data where menuId is 'self-portraits'
const selfPortraits = allData.filter((item) => item.data.menuId === 'self-protraits');
---

<Layout title="DF">
	{
		selfPortraits.length > 0 ? (
			<div class="container mx-auto p-4">
				{selfPortraits.map((item) => (
					<Item item={item} />
				))}
			</div>
		) : (
			<p>No self-portraits available.</p>
		)
	}
</Layout>
