---
const { page, firstPath } = Astro.props;
// @ts-ignore
const paginationList = Array.from({ length: `${page.lastPage}` }, (_, i) => i + 1);
const lastUrl = `${firstPath}/${page.lastPage}`;

// get first path of url to use for pagination
const pathname = new URL(Astro.request.url).pathname.split('/');
console.log ('pathname: ', pathname);
const _firstPath = pathname[1];
---

<nav aria-label="Blog pages" class="mt-2 mb-6 flex items-center justify-center space-x-2">
	{
		!page.url.prev ? (
			<span class="text-gray-500 cursor-not-allowed bg-white text-black p-2">
				First
			</span>
		) : (
			<a href={`/${_firstPath}/1`} class="text-blue-600 hover:text-blue-700 text-black bg-white p-2">
				First
			</a>
		)
	}

	{
		page.url.prev ? (
			<a href={page.url.prev} class="text-blue-600 hover:text-blue-700">
				<i class="fa fa-arrow-left" />
			</a>
		) : (
			<span class="text-gray-500 cursor-not-allowed">
				<i class="fa fa-arrow-left" />
			</span>
		)
	}

	{
		paginationList.map((num) => (
			<a
				href={`/${_firstPath}/${num}`}
				class={`px-2 py-1 ${
					page.currentPage == num ? 'text-white bg-blue-700' : 'text-blue-600 text-black hover:bg-blue-100'
				} rounded`}
			>
				{num}
			</a>
		))
	}

	{
		!page.url.next ? (
			<span class="text-gray-500 cursor-not-allowed">
				<i class="fa fa-arrow-right" />
			</span>
		) : (
			<a href={page.url.next} class="text-blue-600 hover:text-blue-700">
				<i class="fa fa-arrow-right" />
			</a>
		)
	}

	{
		!page.url.next ? (
			<span class="text-gray-500 cursor-not-allowed text-black bg-white p-2">
				Last
			</span>
		) : (
			<a href={`/${_firstPath}/${paginationList.length}`} class="text-blue-600 hover:text-blue-700 text-black bg-white p-2">
				Last
			</a>
		)
	}
</nav>
